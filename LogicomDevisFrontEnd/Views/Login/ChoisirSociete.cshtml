@{
    ViewBag.Title = "Select Society";
}

<h2>@ViewBag.Title</h2>

<div class="society-list">
    @foreach (var society in ViewBag.Societies)
    {
        <a href="#" class="society-button">@society.Name</a>
    }
</div>

<style>
    .society-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .society-button {
        display: inline-block;
        padding: 20px;
        margin: 10px;
        font-size: 24px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border-radius: 50%;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .society-button:hover {
            background-color: #0062cc;
        }
</style>